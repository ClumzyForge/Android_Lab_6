<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Android_Lab_5" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="android:buttonTint">@color/secondaryDark</item>
    </style>

    <style name="basicButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondaryDark</item>
        <item name="backgroundColor">@color/secondaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="verLayout">
        <item name="backgroundTint">@color/secondaryDark</item>
    </style>

    <style name="editTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondaryDark</item>
    </style>

    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondaryDark</item>
    </style>
</resources>